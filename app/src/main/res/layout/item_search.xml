<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--线性布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
        <ImageView
            android:id="@+id/iv_good"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/shangcheng"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="华硕（ASUS）经典系列X554LP 15.6英寸笔记本 "
                android:textColor="#404040"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="left"
                tools:ignore="RtlHardcoded"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/good_classify"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="详细信息|xxxx|xxxxx"
                    android:textColor="#7A7778"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_price_good"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:text="￥1000.0"
                    android:textColor="#E91E63"
                    android:textSize="20sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:gravity="left"
                tools:ignore="RtlHardcoded"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/good_sales_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="销量：1w+"
                    android:textColor="#737070"
                    android:lines="2"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:gravity="left"
                tools:ignore="RtlHardcoded"
                android:paddingTop="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/good_send_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="发货地址：上海"
                    android:textColor="#1E1C1C"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <!--线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#22000000" />


</LinearLayout>